doctype html
html(lang='en')
  head
    title Registered Users
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css')
    style.
      footer { margin: 35px 0 15px 0; text-align: center }
  body
    main#main
    h1.ui.center.aligned.header Registered Users
    .ui.container
      table.ui.celled.table.center.aligned
        thead
            tr    
              th Id        
              th Username            
              th Email            
        tbody
          for user in users
            tr              
              td #{user.id}
              td #{user.username}
              td #{user.email}              
          else
            li No users have been provided
        tfoot
          tr
            th(colspan='6')
